<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="recruit">
	<typeAlias alias="recruitBean" type="recruite.bean.RecruitBean" />
	<insert id="insertRecScrap" parameterClass="recruitBean">
		INSERT INTO RECRUIT
		VALUES(#rec_no#, #rec_title#, #rec_sdate#, #rec_fdate#)		
	</insert>
	
	<select id="selectRecScrap" resultClass="recruitBean">
		select REC_NO, REC_TITLE, REC_SDATE, REC_FDATE	
		from RECRUIT
	</select>
</sqlMap>











